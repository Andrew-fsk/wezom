{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>
    <h1> page - {{ page }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Image</th>
                <th>Published</th>
                <th>Post_time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.title }}</td>
                <td>{{ news.text }}</td>
                <td>{{ news.image }}</td>
                <td>{{ news.published ? 'Yes' : 'No' }}</td>
                <td>{{ news.postTime ? news.postTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('news_show', {'id': news.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ dump() }}
    {% if previous > 0 and page != 1%}
        <a href="{{ path('news_index', { page: previous }) }}">Previous</a>
    {% elseif previous == 0 and page != 1 %}
        <a href="{{ path('news_index') }}">Previous</a>
    {% endif %}

    {% if next <= news.count %}
        <a href="{{ path('news_index', { page: next }) }}">Next</a>
    {% endif %}

{#    <a href="{{ path('news_new') }}">Create new</a>#}
{% endblock %}
